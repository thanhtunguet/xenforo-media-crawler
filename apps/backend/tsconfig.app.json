{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "../../dist/apps/backend",
    "rootDir": "./src",
    "module": "commonjs",
    "types": [
      "node"
    ],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "baseUrl": "../../",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "paths": {
      "src/*": [
        "apps/backend/src/*"
      ],
      "@xenforo-media-crawler/contracts": [
        "dist/libs/contracts/src/index.d.ts"
      ]
    }
  },
  "references": [
    {
      "path": "../../libs/contracts/tsconfig.lib.json"
    }
  ],
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "**/*spec.ts"
  ]
}